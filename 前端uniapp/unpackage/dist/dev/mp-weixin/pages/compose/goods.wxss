page {
  background-color: #FFF;
}
.last_title {
  font-size: 17px;
  color: #101010;
  font-weight: 700;
}
.detail {
  width: 100%;
  padding: 0 0 120rpx;
  box-sizing: border-box;
}
.detail .header {
  height: 580px;
  position: relative;
  background-color: #fff;
}
.detail .header .last {
  width: 632rpx;
  height: 382rpx;
  margin: 0 auto;
  box-sizing: border-box;
  position: absolute;
  bottom: 60rpx;
  left: calc(50% - 310rpx);
}
.detail .header .last .last-img {
  width: 100%;
  height: 100%;
  background-image: url(/static/last.png);
  background-position: 50%;
  background-size: cover;
  position: relative;
  padding: 160rpx 20rpx 0;
  box-sizing: border-box;
}
.detail .header .last .last-img .flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail .header .last .last-img .flex-center .flex-fixed {
  width: 36rpx;
  height: 30rpx;
}
.detail .header .last .last-img .flex-center .flex-fixed image {
  width: 100%;
  height: 100%;
}
.detail .header .last .last-img .flex-center .title {
  color: #FFF;
  padding: 0 20rpx;
  font-size: 15px;
  font-weight: 700;
}
.detail .header .last .last-img .assets {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFF;
  font-size: 13px;
  margin-top: 10rpx;
}
.detail .header .last .last-img .assets text:nth-child(1) {
  color: #999;
  margin-right: 20rpx;
}
.detail .header .media {
  position: absolute;
  top: 30%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%) !important;
          transform: translate(-50%, -50%) !important;
  z-index: 2;
}
.detail .header .media .media-img-wrapper {
  width: 400rpx;
  height: 400rpx;
  border-radius: 30rpx;
  overflow: hidden;
}
.detail .header .media .media-img-wrapper image {
  width: 100%;
  height: 100%;
}
.detail .detail-image {
  width: 100%;
  text-align: center;
  -webkit-transform: translate3d(0, 0, 0);
          transform: translate3d(0, 0, 0);
}
.detail .detail-image .detail-img {
  width: 70%;
  -webkit-animation: detail 20s infinite;
          animation: detail 20s infinite;
  -webkit-transform: translate3d(0, 0, 2rpx);
          transform: translate3d(0, 0, 2rpx);
}
.detail .exhibition {
  width: 100%;
  padding: 100rpx 0 100rpx;
  background: url(/static/story_02.png) no-repeat;
  background-size: 100% 100%;
  font-size: 45rpx;
  color: #fff;
  text-align: center;
}
.detail .exhibition .titleTop {
  margin-top: 50rpx;
  font-weight: 700;
}
.detail .exhibition .number {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin: 20rpx 0;
}
.detail .exhibition .number .numText {
  display: flex;
  align-items: center;
  border-radius: 5rpx;
  background: #4B4B4C;
  color: #F3E0BC;
  padding-right: 20rpx;
  margin-right: 15rpx;
}
.detail .exhibition .number .numText .title {
  background: #F3E0BC;
  padding: 5rpx 10rpx;
  color: #000;
  border-radius: 5rpx;
  margin-right: 20rpx;
}
.detail .content {
  position: relative;
  padding: 30rpx 20rpx 140rpx;
  box-sizing: border-box;
  margin-top: -150px;
  background: #FFF;
  border-radius: 40rpx 40rpx 0 0;
  box-shadow: 0 0 5px #eee;
}
.detail .content .story-title {
  font-size: 17px;
  font-weight: 700;
  margin-top: 20rpx;
}
.detail .content .story_box {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 48rpx;
}
.detail .content .story_box .story_item {
  margin: 0 32rpx 32rpx 0;
  padding: 30rpx 10rpx 22rpx 24rpx;
  width: 206rpx;
  box-sizing: border-box;
  background: #f5f5f5;
  border-radius: 10rpx;
}
.detail .content .story_box .story_item .name {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.detail .content .story_box .story_item .type {
  margin-bottom: 16rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
}
.detail .content .story_box .story_item .img {
  width: 160rpx;
  height: 160rpx;
  background: #f1f1f1;
  border-radius: 8rpx;
  overflow: hidden;
}
.detail .content .story_box .active {
  background-color: #dccdcd;
}
.detail .content .component-content {
  background-color: #f9f9f9;
  margin-top: 44rpx;
  padding: 32rpx;
  border-radius: 32rpx;
  line-height: 33px;
  color: #333;
}
.detail .content .story {
  width: 100%;
  background: #f9f9f9;
  border-radius: 30rpx;
  margin-top: 20rpx;
  color: #333;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}
.detail .content .story .story-content-img {
  width: 100%;
}
.detail .content .story .story-author {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 20rpx 20rpx;
  color: #A3A3A3;
  font-size: 35rpx;
}
.detail .content .story .story-author .story-author-text {
  color: #fff;
}
.footer-fixed {
  display: block;
  box-sizing: border-box;
  padding: 12px 0 19px;
  height: 96px;
  background-color: #fff;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 11;
  box-shadow: 0 0 5px #ddd;
}
.footer-fixed .btn-normal {
  background: #a4a1a1;
  color: #fff;
  cursor: default;
  width: 311px;
  height: 41px;
  border-radius: 20px;
  margin: 0 auto 7px;
  font-size: 16px;
  font-weight: 400;
  line-height: 41px;
  text-align: center;
}
.footer-fixed .btn-active {
  background-color: #2A67F2;
  color: #FFF;
}
.footer-fixed .compose-progress {
  font-size: 12px;
  font-weight: 400;
  color: #767676;
}

