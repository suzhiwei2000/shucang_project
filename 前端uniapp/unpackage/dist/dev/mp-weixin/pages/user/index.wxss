page {
  background-image: url("https://imgcdn.ecbao.cn/nft/user/user_bg.png");
  background-position: 100% 0;
  background-size: 100%;
  background-repeat: no-repeat;
  background: #F6F7FB;
}
.user {
  background-color: #F6F7FB;
  padding: 0 0;
}
.user .box {
  margin-bottom: 32rpx;
  padding: 150rpx 0 0;
  position: relative;
  width: 100%;
  height: 350rpx;
  background-image: linear-gradient(to right, #C7F0E5, #E9EAF8);
  color: #575757;
  text-align: center;
  padding-top: 110rpx;
}
.user .box .avatar {
  position: absolute;
  height: 160rpx;
  width: 160rpx;
  top: 80rpx;
  left: calc(50% - 80rpx);
  border-radius: 50%;
  overflow: hidden;
}
.user .box .avatar image {
  width: 100%;
  height: 100%;
}
.user .box .name {
  font-size: 19px;
  margin-top: 150rpx;
}
.user .box .phone {
  font-size: 15px;
  color: #575757;
  margin-top: 20rpx;
}
.user .box .jifen {
  margin: 0 auto;
  margin-top: 40rpx;
  font-size: 14px;
}
.user .box .jifen .icon {
  width: 44rpx;
  height: 44rpx;
  margin: 0 auto;
  margin-bottom: 10rpx;
}
.user .box .jifen .icon image {
  width: 100%;
  height: 100%;
}
.user .next {
  background: #fff;
  border-radius: 22rpx;
  margin-bottom: 32rpx;
  padding-top: 20rpx;
}
.user .next .title {
  font-size: 16px;
  font-weight: 400;
  color: #575757;
  margin-bottom: 22rpx;
  padding: 0 32rpx;
}
.user .next .menu {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 0;
}
.user .next .menu .menu-item {
  color: #575757;
  text-align: center;
}
.user .next .menu .muni-img {
  width: 50rpx;
  margin-bottom: 10rpx;
}
.user .header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.user .header .headerInfo {
  display: flex;
  align-items: center;
}
.user .header .headerInfo .header-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  margin-right: 25rpx;
}
.user .header .headerInfo .userinfo {
  font-size: 30rpx;
  color: #999;
}
.user .header .headerInfo .userinfo .name {
  color: #fff;
  font-size: 45rpx;
  margin-bottom: 10rpx;
}
.user .header .headerInfo .userinfo .phone {
  font-size: 26rpx;
}
.user .header .userdetail {
  background: #3D4042;
  border-radius: 30rpx;
  padding: 15rpx 50rpx;
  text-align: center;
  color: #fff;
  font-weight: 700;
}
.user .list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.user .list .list-item {
  width: 18%;
  color: #fff;
  background: #fff;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
  padding: 30rpx 50rpx;
  color: #575757;
  font-size: 14px;
}
.user .list .icon-left {
  text-align: center;
}
.user .list .icon-left .list-img {
  width: 40rpx;
  height: 40rpx;
}
.user .list .icon-left .list-img image {
  width: 100%;
  height: 100%;
}
.user .list .icon-right {
  width: 30rpx;
}

