page {
  background-color: #F2F2F2;
}
.userinfo {
  padding: 20rpx 20rpx;
}
.userinfo .userinfo-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #000;
  background: #FFF;
  border-radius: 30rpx;
  margin-bottom: 25rpx;
  padding: 30rpx 50rpx;
}
.userinfo .login_out {
  width: 100%;
  border-radius: 30rpx;
  background: #292B2B;
  color: #C94F58;
  text-align: center;
  padding: 30rpx 0;
  margin-top: 200rpx;
}
.userinfo .icon-left {
  font-size: 35rpx;
}
.userinfo .icon-right {
  display: flex;
  align-items: center;
  color: #A6A7A7;
  font-size: 35rpx;
}
.userinfo .icon-right .icon-text-img {
  width: 100rpx;
  border-radius: 100%;
}
.userinfo .icon-right .icon-text {
  display: flex;
  align-items: center;
}
.userinfo .icon-right .icon-text .icon-a {
  margin-right: 10rpx;
}
.userinfo .icon-right .icon-o {
  width: 25rpx;
  height: 25rpx;
  background: #FF3141;
  border-radius: 100%;
  margin-right: 10rpx;
}
.userinfo .icon-right .icon-img {
  width: 50rpx;
}
.pop-item .popup-text {
  width: 100vw;
  background: #2C2F2F;
  padding: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}
.pop-item .camera {
  border-radius: 20rpx 20rpx 0 0;
  margin-bottom: 1rpx;
}
.pop-item .close {
  margin-top: 15rpx;
}
.popupName-item {
  padding: 20rpx 0 0;
  background: #FFF;
  color: #000;
  font-size: 30rpx;
  border-radius: 20rpx;
  text-align: center;
}
.popupName-item .popupName-title {
  font-size: 40rpx;
  font-weight: 700;
}
.popupName-item .popupName-text {
  margin: 30rpx 0 25rpx;
}
.popupName-item .popupName-input {
  background: #FFFFFF;
  border-radius: 10rpx;
  padding: 20rpx 0 20rpx 30rpx;
  margin: 0 40rpx;
  width: 500rpx;
  text-align: left;
  border: 2rpx solid #F2F2F2;
}
.popupName-item .popupName-btn {
  display: flex;
  align-items: center;
  border-top: 2rpx solid #5E6161;
  margin-top: 30rpx;
}
.popupName-item .popupName-btn .popupName-a {
  width: 50%;
  line-height: 100rpx;
  text-align: center;
}
.popupName-item .popupName-btn .close {
  border-right: 2rpx solid #5E6161;
}

