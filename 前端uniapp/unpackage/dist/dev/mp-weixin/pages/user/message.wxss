page {
  background-color: #F2F2F2;
}
.userinfo {
  padding: 0 20rpx;
}
.userinfo .userinfo-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #000;
  background: #FFF;
  border-radius: 30rpx;
  margin-top: 25rpx;
  padding: 30rpx 50rpx;
}
.userinfo .login_out {
  width: 100%;
  border-radius: 30rpx;
  background: #292B2B;
  color: #C94F58;
  text-align: center;
  padding: 30rpx 0;
  margin-top: 200rpx;
}
.userinfo .icon-left {
  font-size: 35rpx;
}
.userinfo .icon-right {
  display: flex;
  align-items: center;
  color: #A6A7A7;
  font-size: 35rpx;
}
.userinfo .icon-right .icon-text {
  display: flex;
  align-items: center;
}
.userinfo .icon-right .icon-text .icon-a {
  margin-right: 10rpx;
}
.userinfo .tip {
  color: #000;
  margin-top: 20rpx;
  margin-left: 10rpx;
}

