}
.detail .submit {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  color: #fff;
  font-size: 50rpx;
  font-weight: 700;
  box-sizing: border-box;
  border-top: 2rpx solid #F2F2F2;
}
.detail .submit .sub-price {
  letter-spacing: 5rpx;
  color: #007aff;
  margin-left: 50rpx;
}
.detail .submit .sub-btn {
  font-size: 30rpx;
  background: #007aff;
  color: #FFFFFF;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  text-align: center;
}
.detail .submit .timeIcon {
  display: flex;
  align-items: center;
}
.detail .submit .timeIcon .icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 6rpx;
}
.detail .submit .timeIcon .icon image {
  width: 100%;
  height: 100%;
}
@-webkit-keyframes detail {
0% {
    -webkit-transform: rotateY(0);
            transform: rotateY(0);
}
50% {
    -webkit-transform: rotateY(360deg);
            transform: rotateY(360deg);
}
100% {
    -webkit-transform: rotateY(0);
            transform: rotateY(0);
}
}
@keyframes detail {
0% {
    -webkit-transform: rotateY(0);
            transform: rotateY(0);
}
50% {
    -webkit-transform: rotateY(360deg);
            transform: rotateY(360deg);
}
100% {
    -webkit-transform: rotateY(0);
            transform: rotateY(0);
}
}
