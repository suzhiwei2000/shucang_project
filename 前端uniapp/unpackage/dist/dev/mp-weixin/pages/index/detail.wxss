.detail .story-title {
  font-size: 17px;
  font-weight: 700;
  margin-top: 20rpx;
}
.detail .story {
  width: 100%;
  background: #f9f9f9;
  border-radius: 30rpx;
  margin-top: 20rpx;
  color: #333;
