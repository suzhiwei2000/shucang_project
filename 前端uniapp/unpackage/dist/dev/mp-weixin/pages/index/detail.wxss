  position: absolute;
  bottom: 60rpx;
  left: calc(50% - 310rpx);
}
.detail .header .last .last-img {
  width: 100%;
  height: 100%;
  background-image: url(/static/last.png);
  background-position: 50%;
  background-size: cover;
  position: relative;
  padding: 160rpx 20rpx 0;
  box-sizing: border-box;
}
.detail .header .last .last-img .share {
  position: absolute;
  left: calc(50% - 30rpx);
  top: -8%;
  bottom: 368rpx;
  width: 60rpx;
  height: 60rpx;
}
.detail .header .last .last-img .share image {
  width: 100%;
  height: 100%;
}
.detail .header .last .last-img .flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail .header .last .last-img .flex-center .flex-fixed {
  width: 36rpx;
  height: 30rpx;
}
.detail .header .last .last-img .flex-center .flex-fixed image {
  width: 100%;
  height: 100%;
}
.detail .header .last .last-img .flex-center .title {
  color: #FFF;
  padding: 0 20rpx;
  font-size: 15px;
  font-weight: 700;
}
.detail .header .last .last-img .assets {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFF;
  font-size: 13px;
  margin-top: 10rpx;
}
.detail .header .last .last-img .assets text:nth-child(1) {
  color: #999;
  margin-right: 20rpx;
}
.detail .header .newTxt {
  width: 90%;
  position: absolute;
  bottom: 60rpx;
  background-color: #1B1714;
  border: 4rpx solid #BE9D8A;
  left: calc(5% - 8rpx);
  border-radius: 12rpx;
  padding: 10rpx;
}
.detail .header .newTxt .MyId {
  color: #fff;
  text-align: center;
  font-weight: 700;
  padding: 20rpx 0;
  letter-spacing: 2px;
}
.detail .header .newTxt .txt {
  color: #FFF;
  text-align: center;
  font-size: 20px;
  margin-top: 10rpx;
}
.detail .header .newTxt .center {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}
.detail .header .newTxt .center .xianliang {
  background-color: #FACEB6;
  color: #000;
  border-radius: 30rpx;
  padding: 4rpx 14rpx;
  margin: 0 auto;
  display: inline-block;
  font-size: 15px;
  margin-top: 20rpx;
}
.detail .header .newTxt .last_title {
  position: relative;
  color: #615752;
  text-align: center;
  font-size: 13px;
}
.detail .header .newTxt .last_title:before {
  left: 44px;
  content: "";
  width: 55px;
  height: 2rpx;
  background-color: #615752;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}
.detail .header .newTxt .last_title:after {
  right: 44px;
  content: "";
  width: 55px;
  height: 2rpx;
  background-color: #615752;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}
.detail .header .media {
  position: absolute;
  top: 36%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%) !important;
          transform: translate(-50%, -50%) !important;
  z-index: 2;
}
.detail .header .media .media-img-wrapper {
  width: 400rpx;
  height: 400rpx;
  border-radius: 30rpx;
  overflow: hidden;
}
.detail .header .media .media-img-wrapper image {
  width: 100%;
}
.detail .detail-image {
  width: 100%;
  text-align: center;
  -webkit-transform: translate3d(0, 0, 0);
          transform: translate3d(0, 0, 0);
}
.detail .detail-image .detail-img {
  width: 70%;
  -webkit-animation: detail 20s infinite;
          animation: detail 20s infinite;
  -webkit-transform: translate3d(0, 0, 2rpx);
          transform: translate3d(0, 0, 2rpx);
}
