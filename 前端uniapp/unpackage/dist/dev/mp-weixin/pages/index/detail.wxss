  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}
.detail .notice {
  width: 100%;
  background: #fff;
  border-radius: 30rpx;
  color: #333;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.detail .notice .notice-title {
  font-size: 50rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.detail .notice .notice-content {
  color: #9B9B9B;
