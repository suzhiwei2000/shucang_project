.detail {
  width: 100%;
  padding: 0 0 120rpx;
  box-sizing: border-box;
}
.detail .header {
  height: 680px;
  position: relative;
  background-color: #FFF;
}
.detail .header .last {
  width: 632rpx;
  height: 382rpx;
  margin: 0 auto;
