.login {
  width: 100%;
  height: 100vh;
  padding: 100rpx 40rpx 0;
  box-sizing: border-box;
  background-color: #FFF;
}
.login .login-close {
  width: 50rpx;
  position: absolute;
  top: 120rpx;
  left: 50rpx;
}
.login .login-title {
  font-size: 60rpx;
  color: #fff;
  letter-spacing: 5rpx;
}
.login .login-phone {
  width: 100%;
  font-size: 32rpx;
  letter-spacing: 8rpx;
  color: #000;
  background-color: #FFF;
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
}
.login .input-text {
  margin-top: 30rpx;
  color: #666;
  letter-spacing: 6rpx;
  font-size: 30rpx;
}
.login .title {
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}
.login .input-texts {
  margin-top: 30rpx;
  color: #F23636;
  letter-spacing: 6rpx;
  font-size: 30rpx;
  text-align: right;
  border-bottom: 2rpx solid #F23636;
  display: inline-block;
}
.login .login-submit {
  border-radius: 40rpx;
  background-color: #01CEA5;
  height: 80rpx;
  width: 80%;
  line-height: 80rpx;
  text-align: center;
  margin: 80rpx auto 0;
  font-size: 32rpx;
  color: #FFF;
}
.login .login-sub {
  background-color: #01CEA5;
  color: #FFF;
}
.logo {
  width: 210rpx;
  height: 160rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  overflow: hidden;
}
.logo image {
  width: 100%;
  height: 100%;
}
.name {
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 60rpx;
}
.box {
  box-sizing: border-box;
  margin-bottom: 33px;
  padding: 27px 17px 32px;
  border-radius: 11px;
  width: 100%;
}
.box .flex {
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #C5C5C5;
  margin-bottom: 20rpx;
}
.box .flex .img {
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.code_box {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 10rpx;
  background-color: #FFF;
  border-radius: 10rpx;
}
.code_box .ipt {
  font-size: 16px;
  color: grey;
}
.code_box .code {
  padding: 2px 6px;
  background-color: #01CEA5;
  border-radius: 4px;
  color: #fff;
}

